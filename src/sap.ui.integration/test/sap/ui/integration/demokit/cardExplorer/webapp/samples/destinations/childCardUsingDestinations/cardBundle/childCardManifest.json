{
	"_version": "1.73.1",
	"sap.app": {
		"id": "card.explorer.sample.childCardUsingDestinations.childCard",
		"type": "card",
		"title": "Sample of destinations",
		"subTitle": "Sample of destinations",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this card",
		"info": "Additional information about this card",
		"description": "A long description for this card",
		"tags": {
			"keywords": [
				"Destinations",
				"Card",
				"Sample"
			]
		}
	},
	"sap.card": {
		"type": "Object",
		"data": {
			"request": {
				"url": "{{mainDestinations.myDestination}}/Products",
				"parameters": {
					"$format": "json",
					"$filter": "ProductID eq {parameters>/ProductID/value}"
				}
			}
		},
		"configuration": {
			"useMainDestinations": true,
			"parameters": {
				"ProductID": {
					"value": -1
				}
			}
		},
		"header": {
			"data": {
				"path": "/value/0"
			},
			"title": "{ProductName}",
			"icon": {
				"src": "{{mainDestinations.myDestinationForImages}}/Product_{ProductID}.png"
			}
		},
		"content": {
			"data": {
				"path": "/value/0"
			},
			"groups": [
				{
					"items": [
						{
							"label": "ID",
							"value": "{ProductID}"
						},
						{
							"label": "Units in stock",
							"value": "{UnitsInStock}"
						},
						{
							"label": "Unit Price",
							"value": "{= format.currency(${UnitPrice}, 'EUR')}"
						}
					]
				}
			]
		}
	}
}